FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      probes;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

fields
(
    U
);

probeLocations
(
    (4.0 0.2 0.5)    // Wake centerline, 1 m downstream of cylinder
    (4.0 0.25 0.5)   // Slightly offset upward
    (4.0 0.15 0.5)   // Slightly offset downward
);

